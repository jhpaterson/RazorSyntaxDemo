<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
    <h1>@ViewBag.Title</h1>
    <div id="main-content">
        @RenderBody()
    </div>
    <footer>
     @if (IsSectionDefined("Footer"))
     {
        @RenderSection("Footer")
     }
     else
     {
         <span>This is the default footer</span>
     }
    </footer>
</body>
</html>
